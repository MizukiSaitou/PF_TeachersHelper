<div class="container">
  <div class="top-box">
    <div class="devise-text">
        <h2>ログイン</h2>
        
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :社員番号 %><br />
            <%= f.text_field :employee_number, autofocus: true, autocomplete: "employee_number" %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
