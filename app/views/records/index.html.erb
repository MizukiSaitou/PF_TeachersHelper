<table>
  <thead>
    <tr>
      <td>学校名</td>
      <td>学年</td>
      <td>生徒名</td>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @student.school %></td>
      <td><%= @student.grade %></td>
      <td><%= @student.name %></td>
    </tr>
  </tbody>
</table>



<h1>テスト点入力</h1>
<table>
  <tr>
    <th>テスト名</th>
    <th>英語</th>
    <th>数学</th>
    <th>国語</th>
    <th>理科</th>
    <th>社会</th>
  </tr>
<%= form_with model:@record, local:true do |f| %>
<tr>
  <td><%= f.text_field :test_name %></td>
  <td><%= f.text_field :english_score %></td>
  <td><%= f.text_field :math_score %></td>
  <td><%= f.text_field :japanese_score %></td>
  <td><%= f.text_field :science_score %></td>
  <td><%= f.text_field :social_study_score %></td>
</tr>
<%= f.submit"テスト結果を登録" %>
<% end %>
</table>

<h1>内申点入力</h1>
<table>
  <tr>
    <th>学期</th>
    <th>英語</th>
    <th>数学</th>
    <th>国語</th>
    <th>理科</th>
    <th>社会</th>
    <th>美術</th>
    <th>音楽</th>
    <th>体育</th>
    <th>技/家</th>
  </tr>
<%= form_with model:@record, local:true do |f| %>
<tr>
  <td><%= f.text_field :semester_name %></td>
  <td><%= f.text_field :english_academic_result %></td>
  <td><%= f.text_field :math_academic_result %></td>
  <td><%= f.text_field :japanese_academic_result %></td>
  <td><%= f.text_field :science_academic_result %></td>
  <td><%= f.text_field :sstudy_sacademic_result %></td>
  <td><%= f.text_field :art_academic_result %></td>
  <td><%= f.text_field :music_academic_result %></td>
  <td><%= f.text_field :pe_academic_result %></td>
  <td><%= f.text_field :te_academic_result %></td>
</tr>
<%= f.submit"内申点を登録" %>
<% end %>
</table>

