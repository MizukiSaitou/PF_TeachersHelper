<div class="lesson-box">
  <div class="container">
    <div class="row mx-auto">
      <h1>授業一覧</h1>
      <table  class="table table-bordered text-center">
        <thead class="table-secondary">
            <tr>
              <th style="width: 30%">授業日時</th>
              <th style="width: 30%">生徒名</th>
              <th style="width: 10%">授業科目</th>
              <th style="width: 30%">担当講師名</th>
            </tr>
        </thead>

        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td>
                <%= link_to edit_lesson_path(lesson, student_id: @student.id) do %>
                  <%= lesson.start_at.strftime("%Y-%m-%d %H:%M") %>
                <% end %>
              </td>
              <td>
                <!--%= link_to student_path(@student) do %>-->
                  <%= lesson.student.name %>
                <!--% end %>-->
              </td>
              <td><%= lesson.subject.subject_name %></td>
              <td>
                <!--%= link_to teacher_path(@teacher) do %>-->
                  <%= lesson.teacher.name %>
                <!--% end %>-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>