<table>
    <tr>
      <th>生徒名</th>
      <th>学年</th>
      <th>学校名</th>
      <th>受講科目</th>
      <th>特記事項</th>

    </tr>
    <tr>
       <td><%= @student.name %></td>
       <td><%= @student.grade %></td>
       <td><%= @student.school %></td>
       <td>
         <% @subjects.map(&:subject_name).each do |subject| %>
           <%= subject %>
         <% end %>
        </td>
        <td><%= @student.notices %></td>
    </tr>
</table>

<%= form_with url:'/search', method: :get, remote:true do |f| %>
  <%= f.label :start_at, "開始時間" %>
  <%= f.datetime_field :start_at %>
  <%= f.label :end_at, "終了時間" %>
  <%= f.datetime_field :end_at %>
  <%= f.collection_select(:subject_id, @subject, :id, :subject_name) %>
  <!--生徒が受講している科目だけ表示させる-->
  <!--%= f.collection_select(:subject_id, @subject, :id, :subject_name) %>-->
  <%= f.submit"検索" %>
<% end %>

