<%= form_with model:@student, local:true do |f| %>

<h4>生徒名</h4>
<%= f.text_field :name %>

<h4>ふりがな</h4>
<%= f.text_field :name_kana %>

<h4>学年</h4>
<%= f.select :grade, [["小1", "小学1年生"], ["小2", "小学2年生"],["小3", "小学3年生"],["小4", "小学4年生"],["小5", "小学5年生"],["小6", "小学6年生"],
                      ["中1", "中学1年生"],["中2", "中学2年生"],["小3", "中学3年生"],
                      ["高1", "高校1年生"],["高2", "高校2年生"],["高3", "高校3年生"],["卒生", "浪人生"]], include_blank: "学年選択" %>

<h4>学校名</h4>
<%= f.text_field :school %>

<h4>電話番号</h4>
<%= f.text_field :phone_number %>

<h4>性別</h4>
<label><%=f.radio_button :gender, :"男性" %>男性</label>
<label><%=f.radio_button :gender, :"女性" %>女性</label>

<h4>受講科目</h4>
<%= f.collection_check_boxes(:subject_ids, @subjects, :id, :category_id) do |subject| %>
    <%= subject.check_box %>
    <%= subject.text %>
    <%= f.submit"登録" %>
<% end %>

<% end %>