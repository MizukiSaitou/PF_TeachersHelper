 <div class="teacher-box">
  <h1>講師一覧</h1>
  
  <%= form_with url:teachers_path, method: :get, local: true do |f| %>
  　<%= f.label :search, "講師名" %>
    <%= f.text_field :search %> 
    <%= f.submit"検索" ,:name => nil %> 
  <% end %> 
  
  <!-- formatをcsvとして指定してcontrollerのrespond_toの処理を実行する -->
  <%= link_to "csvで出力する",teachers_path(format: :csv) %>
  
    <div class="container">
      <div class="row mt-5">

        <table  class="table table-bordered border border-dark text-center">
          <tr class="table-secondary">
            <th style="width: 30%">講師名</th>
            <th style="width: 10%">性別</th>
            <th style="width: 30%">学科</th>
            <th style="width: 30%">電話番号</th>
          </tr>

          <% @teachers.each do |teacher| %>

          <tr class="table-light">
            <td>
              <%= link_to teacher_path(teacher) do %>
                <%= teacher.name %>
              <% end %>
            </td>
            <td><%= teacher.gender %></td>
            <td><%= teacher.undergraduate %></td>
            <td><%= teacher.phone_number %></td>
          </tr>

          <% end %>
        </table>


        <%= paginate @teachers %>

       </div>
    </div>
</div>